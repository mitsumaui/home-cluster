#cloud-config
autoinstall:
  version: 1
  apt:
    geoip: true
    preserve_sources_list: false
    primary:
    - arches: [amd64, i386]
      uri: http://gb.archive.ubuntu.com/ubuntu
    - arches: [default]
      uri: http://ports.ubuntu.com/ubuntu-ports
  early-commands:
  - 'sed -i "s/#DNS=/DNS=192.168.167.1/g" /etc/systemd/resolved.conf'
  - 'systemctl restart systemd-resolved'
  updates: all
  packages:
  - apt-transport-https
  - ca-certificates
  - curl
  - ebtables
  - iputils-ping
  - ipvsadm
  - lvm2
  - net-tools
  - nfs-common
  - open-iscsi
  - psmisc
  - smartmontools
  - software-properties-common
  - unattended-upgrades
  identity: 
    hostname: {{ item.hostname }}
    realname: ubuntu
    username: ubuntu
    password: $6$.iRMQX.qdZXGtSWJ$e0.gvbid1VEuKbILD/2vPKPmOw2BEGajrZx5FcQawUTM4UBRiBGHwrLpXBxUlTv1WUyBmdKE84UQpbYzTboNi.
  keyboard: 
    layout: {{ keyboard_layout }}
    variant: ''
  locale: {{ locale }}
  network:
    network:
      version: 2
      ethernets:
        eth0:
          match:
            macaddress: {{ item.mac_address | upper }}
          set-name: eth0
          addresses: [{{ item.ip_address }}/24]
          critical: true
          dhcp-identifier: mac
          gateway4: {{ gateway }}
          nameservers:
            addresses: [{{ nameservers }}]
            search: [{{ dns_search_suffix }}]
  ssh:
    allow-pw: true
    authorized-keys:
    - 'ssh-rsa  jason@rig'
    - 'ssh-rsa  jason@Jasons-MacBook-Pro.local'    
    install-server: true
  late-commands:
  - 'echo "ubuntu ALL=(ALL) NOPASSWD: ALL" >/target/etc/sudoers.d/ubuntu'
  - 'echo "APT::Periodic::Update-Package-Lists "1";" >/target/etc/apt/apt.conf.d/20auto-upgrades'
  - 'echo "APT::Periodic::Download-Upgradeable-Packages "1";" >>/target/etc/apt/apt.conf.d/20auto-upgrades'
  - 'echo "APT::Periodic::AutocleanInterval "7";" >>/target/etc/apt/apt.conf.d/20auto-upgrades'
  - 'echo "APT::Periodic::Unattended-Upgrade "1";" >>/target/etc/apt/apt.conf.d/20auto-upgrades'
  - 'echo "Unattended-Upgrade::Automatic-Reboot "false";" >/target/etc/apt/apt.conf.d/50unattended-upgrades'
  - 'echo "Unattended-Upgrade::Remove-Unused-Dependencies "true";" >>/target/etc/apt/apt.conf.d/50unattended-upgrades'
  - 'echo "Unattended-Upgrade::Allowed-Origins {" >>/target/etc/apt/apt.conf.d/50unattended-upgrades'
  - 'echo "    "${distro_id} stable";" >>/target/etc/apt/apt.conf.d/50unattended-upgrades'
  - 'echo "    "${distro_id} ${distro_codename}-security";" >>/target/etc/apt/apt.conf.d/50unattended-upgrades'
  - 'echo "    "${distro_id} ${distro_codename}-updates";" >>/target/etc/apt/apt.conf.d/50unattended-upgrades'
  - 'echo "};" >>/target/etc/apt/apt.conf.d/50unattended-upgrades'
  - 'echo "fs.inotify.max_user_watches=65536" >/target/etc/sysctl.d/98-kubernetes-fs.conf'
  storage:
    grub:
      reorder_uefi: False
    swap:
      size: 0
    config:
    - id: disk-os
      type: disk
      ptable: gpt
      path: /dev/{{ item.install_disk }}
      name: ''
      grub_device: false
      wipe: superblock
      preserve: false
    - id: part-boot-efi
      type: partition
      device: disk-os
      size: 536870912
      flag: boot
      number: 1
      grub_device: true
      preserve: false
      wipe: superblock
    - id: part-boot
      type: partition
      device: disk-os
      size: 1073741824
      flag: ''
      number: 2
      grub_device: false
      preserve: false
      wipe: superblock
    - id: part-lvm
      type: partition
      device: disk-os
      size: -1
      flag: ''
      number: 3
      grub_device: false
      preserve: false
      wipe: superblock
    - id: lvm_vg_os
      type: lvm_volgroup
      name: ubuntu-vg
      devices: [part-lvm]
      preserve: false
    - id: lvm_part_root
      type: lvm_partition
      name: ubuntu-lv
      volgroup: lvm_vg_os
      size: {{ item.os_size | default('-1') }}
      preserve: false
      wipe: superblock
    - id: format-boot
      type: format
      fstype: ext4
      volume: part-boot
      preserve: false
    - id: format-boot-efi
      type: format
      fstype: fat32
      volume: part-boot-efi
      preserve: false
    - id: format-root
      type: format
      fstype: ext4
      volume: lvm_part_root
      preserve: false
    - id: mount-root
      type: mount
      path: /
      device: format-root
    - id: mount-boot
      type: mount
      path: /boot
      device: format-boot
    - id: mount-boot-efi
      type: mount
      path: /boot/efi
      device: format-boot-efi
{% if item.data_disk is not defined and data_mount_path is defined %}
    - id: lvm_part_data
      type: lvm_partition
      name: data-lv
      volgroup: lvm_vg_os
      size: -1
      preserve: false
      wipe: superblock
    - id: format-data
      type: format
      fstype: ext4
      volume: lvm_part_data
      preserve: false
    - id: mount-data
      type: mount
      path: {{ data_mount_path }}
      device: format-data
{% endif %}
{% if item.data_disk is defined and data_mount_path is defined and erase_data == true%}
    - id: disk-data
      type: disk
      ptable: gpt
      path: /dev/{{ item.data_disk }}
      name: ''
      grub_device: false
      wipe: superblock
      preserve: false
    - id: part-lvm-data
      type: partition
      device: disk-data
      size: -1
      flag: ''
      number: 1
      grub_device: false
      preserve: false
      wipe: superblock
    - id: lvm_vg_data
      type: lvm_volgroup
      name: data-vg
      devices: [part-lvm-data]
      preserve: false
    - id: lvm_part_data
      type: lvm_partition
      name: data-lv
      volgroup: lvm_vg_data
      size: 100%
      preserve: false
      wipe: superblock
    - id: format-data
      type: format
      fstype: ext4
      volume: lvm_part_data
      preserve: false
    - id: mount-data
      type: mount
      path: {{ data_mount_path }}
      device: format-data
{% endif %}